<div class="row">
    <div class="col-md-11">
        <h5 style="text-align:center">States</h5>
    </div>
    <div class="col-md-1">
        @*<button type="submit" class="btn btn-primary">Save</button> *@
        <a asp-controller="State" asp-action="Create" class="btn btn-success float-end">Create</a>
    </div>
</div>
<hr />
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        text-align: center;
    }
</style>
<div class="container">
    <table id="table" class="table">
        <thead>
            <tr>
                <th>
                    State
                </th>
                <th>
                    IsActive
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen fa-bounce"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-user fa-shake"></i></a>
                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-circle-xmark fa-fade"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $('.table').DataTable();
    </script>
}

